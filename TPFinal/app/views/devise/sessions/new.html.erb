
<head>
  <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@500&display=swap" rel="stylesheet">
</head>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

<div class = "login">

  <div class = "up">
    <h2 class = "titles">Login</h2>
  </div>

  <div class="error"><%= render "devise/shared/error_messages", resource: resource %></div>

  <div class = "question-text">If you don't have an account you can 
    <%= link_to "Sign up", new_user_registration_path, class: "question"%>    
  </div>

  <br>

  <div class="field">
    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "E-mail" %>
  </div>

  <br>
  <br>

  <div class="field">
    <%= f.password_field :password, autocomplete: "current-password", placeholder: "Password" %>
    <br>
    <br>

      <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
      <%= link_to "Forgot your password?", new_password_path(resource_name), class: "question" %><br />
      <% end %>
  
  </div>

  <br>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <br>

  <div class="actions">
    <%= f.submit "Login" %>
  </div>

  <br>

  <%= link_to "Back", root_path, class: "back-but" %>

</div>
<% end %>

